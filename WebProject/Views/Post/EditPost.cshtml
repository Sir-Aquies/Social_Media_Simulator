@model PostModel

<div class="post-crud" ondblclick="event.stopPropagation()">
	<div class="content-holder">
		<textarea name="Content">@Model?.Content</textarea>

		<div class="button-holder">
			<input type="button" value="Cancel" onclick="RemoveTab()" />
			<input type="button" value="Image" onclick="document.getElementById('File').click()" />
			<input type="file" id="File" name="Media" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|image/*" onchange="ImagePreview(this, document.getElementById('frame-holder'))" style="display: none;" />
			<input type="button" value="Edit" onclick="EditPost(this)"/>
		</div>
	</div>

	<div id="frame-holder" class="frame-holder">
		@if (Model?.Media != null)
		{
			<img id="SRC" src="data:image/png;base64,@Model.Media" style="display:none;"/>
		}
	</div>
</div>

@Html.AntiForgeryToken()

