@model RegisterModel

@{
	ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/RegisterCSS.css" asp-append-version="true" />

<h1 class="CenterOb">Register</h1>

<br />

<div class="CentralContainer">
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="FieldContainer">
			<label asp-for="Email"></label>
			<input asp-for="Email" />
			<span asp-validation-for="Email" class="text-danger"></span>

			<label asp-for="UserName"></label>
			<input asp-for="UserName" />
			<span asp-validation-for="UserName" class="text-danger"></span>

			<label asp-for="DateofBirth"></label>
			<input asp-for="DateofBirth" />
			<span asp-validation-for="DateofBirth" class="text-danger"></span>

			<label asp-for="Password"></label>
			<input asp-for="Password" id="Password" />
			<span asp-validation-for="Password" class="text-danger"></span>

			<label asp-for="ConfirmPassword"></label>
			<input asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>

		<div class="ButtonContainer">
			<a asp-area="" asp-action="Login">Already have an account?</a>
			<input type="submit" value="Create Account" />
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}